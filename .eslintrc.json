{
  "env": {
    "node": true
  },
  "extends": [],
  "overrides": [
    {
      "excludedFiles": [],
      "extends": [
        "airbnb"
      ],
      "files": [
        "./**/*.js",
        "./**/*.jsx"
      ],
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "": "never"
          }
        ],
        "import/no-default-export": [
          "off"
        ],
        "import/prefer-default-export": [
          "off"
        ],
        "max-len": [
          "off"
        ],
        "no-await-in-loop": [
          "off"
        ],
        "no-console": [
          "off"
        ],
        "no-continue": [
          "off"
        ],
        "no-irregular-whitespace": [
          "error",
          {
            "skipComments": true
          }
        ]
      }
    },
    {
      "excludedFiles": [],
      "extends": [
        "airbnb",
        "airbnb-typescript"
      ],
      "files": [
        "./**/*.ts",
        "./**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "": "never"
          }
        ],
        "import/no-default-export": [
          "off"
        ],
        "import/prefer-default-export": [
          "off"
        ],
        "max-len": [
          "off"
        ],
        "no-await-in-loop": [
          "off"
        ],
        "no-console": [
          "off"
        ],
        "no-continue": [
          "off"
        ],
        "no-irregular-whitespace": [
          "error",
          {
            "skipComments": true
          }
        ]
      }
    },
    {
      "files": [
        "./src/lib/platform.ts"
      ],
      "rules": {
        "new-cap": [
          "error",
          {
            "newIsCapExceptions": [
              "platformAccessory"
            ]
          }
        ]
      }
    },
    {
      "files": [
        "./src/lib/utility.ts"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
