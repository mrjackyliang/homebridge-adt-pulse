{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "script"
    },
    "rules": {
        "no-console": [
            "off"
        ],
        "max-len": [
            "off"
        ],
        "no-irregular-whitespace": [
            "error",
            {
                "skipRegExps": true
            }
        ]
    }
}
